<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_login_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".ui.login.LoginFragment">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/overlay_gradient_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_login_logo"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img_login_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208"
        app:tint="@color/primaryColor" />

    <EditText
        android:id="@+id/edt_login_id"
        style="@style/BodyWhite"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/overlay_gradient_edt"
        android:hint="아이디"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/edt_login_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_login_pw"
        style="@style/BodyWhite"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="48dp"
        android:background="@drawable/overlay_gradient_edt"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/checkbox_login_autologin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_login_autologin"
        style="@style/BodyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:buttonTint="@color/white"
        android:text="자동 로그인"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btn_login_login"
        app:layout_constraintStart_toStartOf="@id/edt_login_pw" />

    <TextView
        android:id="@+id/text_login_join"
        style="@style/BodyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:background="@drawable/ripple_effect"
        android:text="회원가입"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/checkbox_login_autologin"
        app:layout_constraintEnd_toEndOf="@id/edt_login_pw"
        app:layout_constraintTop_toTopOf="@id/checkbox_login_autologin" />

    <Button
        android:id="@+id/btn_login_login"
        style="@style/BodyWhite"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/button_regular"
        android:text="로그인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
